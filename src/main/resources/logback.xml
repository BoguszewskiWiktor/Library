<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ðŸ”‡ WyÅ‚Ä…czenie komunikatÃ³w startowych Logbacka -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <!-- ========================================================= -->
    <!-- 1ï¸âƒ£ Ustawienia ogÃ³lne -->
    <!-- ========================================================= -->

    <!-- Zmienna Å›rodowiskowa -->
    <property name="LOG_PATH" value="${user.dir}/logs" />
    <property name="APP_NAME" value="LibraryApp" />

    <!-- WÅ‚Ä…cz automatyczne ponowne wczytywanie konfiguracji co 30 sekund -->
    <!-- (scan="true" i scanPeriod) -->

    <!-- ========================================================= -->
    <!-- 2ï¸âƒ£ Formatowanie logÃ³w -->
    <!-- ========================================================= -->

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36}.%method - %msg%n"/>

    <!-- Wersja dla pliku â€“ z nazwÄ… aplikacji -->
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>

    <!-- ========================================================= -->
    <!-- 3ï¸âƒ£ Appender do konsoli -->
    <!-- ========================================================= -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ========================================================= -->
    <!-- 4ï¸âƒ£ Appender do pliku (z rotacjÄ…) -->
    <!-- ========================================================= -->

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Tworzy nowy plik kaÅ¼dego dnia -->
            <fileNamePattern>${LOG_PATH}/archive/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- Maksymalny przybliÅ¼ony rozmiar pliku-->
            <maxFileSize>10MB</maxFileSize>

            <!-- Maksymalny rozmiar folderu z logami -->
            <totalSizeCap>1GB</totalSizeCap>

            <!-- Przechowuj logi maksymalnie przez 30 dni -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ========================================================= -->
    <!-- 5ï¸âƒ£ Loggery dla rÃ³Å¼nych pakietÃ³w -->
    <!-- ========================================================= -->

    <!-- Logowanie dla Twojego kodu (np. com.project lub pl.twojeaplikacje) -->
    <logger name="org.library" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Ogranicz gÅ‚oÅ›noÅ›Ä‡ logÃ³w bibliotek zewnÄ™trznych -->
    <logger name="org.springframework" level="warn"/>
    <logger name="org.hibernate" level="error"/>
    <logger name="ch.qos.logback" level="warn"/>

    <!-- ========================================================= -->
    <!-- 6ï¸âƒ£ Root logger (dla reszty logÃ³w) -->
    <!-- ========================================================= -->

    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
